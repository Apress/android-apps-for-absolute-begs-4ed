<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/universe"
    android:background="#ff000000">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/galaxy"
        android:id="@+id/imageView2"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/universe"
        app:layout_constraintTop_toTopOf="@+id/universe"
        android:contentDescription="@string/image_desc_galaxy" />
    <CheckBox
        android:text="@string/app_checkbox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox"
        android:textColor="#ffffffff"
        android:typeface="sans"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="@+id/universe"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/universe"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:buttonTint="@android:color/white" />
    <TextView
        android:text="@string/app_message2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textColor="#ffffffff"
        android:textSize="36sp"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="@+id/universe"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/universe"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="@+id/universe"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />
    <Button
        android:text="@string/app_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="@+id/universe"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/universe"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toTopOf="@+id/checkBox"
        android:layout_marginBottom="8dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

</android.support.constraint.ConstraintLayout>